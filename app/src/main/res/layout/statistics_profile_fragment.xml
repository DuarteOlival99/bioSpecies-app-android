<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

       <TextView
           android:id="@+id/text_statistics"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           style="@style/TextAppearance.AppCompat.Title"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginTop="5dp"
           android:text="@string/Statistics"
           android:textAlignment="center"
           android:textColor="@color/colorPrimary"

           />

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:layout_margin="16dp"
           >
           <TextView
               android:id="@+id/Descripton"
               android:text="@string/description"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
               android:textColor="@color/black"
               android:textStyle="bold"
               />
           <TextView
               android:id="@+id/value"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/value"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="10dp"
               app:layout_constraintTop_toTopOf="parent"
               style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
               android:textColor="@color/black"
               android:textStyle="bold"
               >
           </TextView>
       </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_statistics_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/caixa_statistics_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/statistics_1_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:text="@string/statistics1"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <ImageView
                    android:id="@+id/green_ball"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_ball"
                    app:layout_constraintStart_toEndOf="@id/statistics_1_name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/green" />

                <TextView
                    android:id="@+id/value_statistics_1"
                    android:layout_width="50dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_right"
                    android:text="20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:gravity="center_vertical"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/cardView_statistics_2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="6dp"
           android:elevation="2dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           >

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/caixa_statistics_2"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               >

               <TextView
                   android:id="@+id/statistics_2_name"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="5dp"
                   android:textSize="16sp"
                   android:text="@string/statistics2"
                   android:layout_marginEnd="10dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"

                   />
               <ImageView
                   android:id="@+id/yellow_ball"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_gravity="center_horizontal"
                   android:adjustViewBounds="true"
                   android:scaleType="fitCenter"
                   android:src="@drawable/ic_ball"
                   app:layout_constraintStart_toEndOf="@id/statistics_2_name"
                   app:layout_constraintTop_toTopOf="parent"
                   app:tint="@color/yellow" />

               <TextView
                   android:id="@+id/value_statistics_2"
                   android:layout_width="50dp"
                   android:layout_height="32dp"
                   android:src="@drawable/ic_arrow_right"
                   android:text="10"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:gravity="center_vertical"/>

           </androidx.constraintlayout.widget.ConstraintLayout>

       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/cardView_statistics_3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="6dp"
           android:elevation="2dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           >

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/caixa_statistics_3"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               >

               <TextView
                   android:id="@+id/statistics_3_name"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="5dp"
                   android:textSize="16sp"
                   android:text="@string/statistics3"
                   android:layout_marginEnd="10dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   />
               <ImageView
                   android:id="@+id/red_ball"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_gravity="center_horizontal"
                   android:adjustViewBounds="true"
                   android:scaleType="fitCenter"
                   android:src="@drawable/ic_ball"
                   app:layout_constraintStart_toEndOf="@id/statistics_3_name"
                   app:layout_constraintTop_toTopOf="parent"
                   app:tint="@color/red" />

               <TextView
                   android:id="@+id/value_statistics_3"
                   android:layout_width="50dp"
                   android:layout_height="32dp"
                   android:src="@drawable/ic_arrow_right"
                   android:text="5"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:gravity="center_vertical"/>

           </androidx.constraintlayout.widget.ConstraintLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/cardView_statistics_5"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="6dp"
           android:elevation="2dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           >

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/caixa_statistics_5"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               >

               <TextView
                   android:id="@+id/statistics_5"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="5dp"
                   android:textSize="16sp"
                   android:text="@string/catches_taken"
                   android:layout_marginEnd="10dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   />

               <TextView
                   android:id="@+id/value_statistics_5"
                   android:layout_width="50dp"
                   android:layout_height="32dp"
                   android:src="@drawable/ic_arrow_right"
                   android:text="7"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:gravity="center_vertical"/>

           </androidx.constraintlayout.widget.ConstraintLayout>

       </androidx.cardview.widget.CardView>

    </LinearLayout>



</ScrollView>