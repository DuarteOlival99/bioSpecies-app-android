        <TextView
            android:id="@+id/perfil_especie_zonas_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/zonas_mais_comuns"
            android:textAlignment="textStart"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/perfil_especie_zonas_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/aparece_o_texto_sobre_onde_a_especie_customa_ser_mais_vezes_vista"
            android:textAlignment="textStart"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            />


    </LinearLayout>
</ScrollView>