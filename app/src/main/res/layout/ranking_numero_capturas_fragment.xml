<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/caderneta_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/ranking_nr_capturas_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/ranking_de_capturas"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />


               <ImageButton
                android:id="@+id/ranking_nr_capturas_firstPlace"
                android:layout_width="100dp"
                android:layout_height="80dp"

                android:backgroundTint="@color/ranking_grey"
                android:clickable="false"
                android:src="@drawable/ic_first_place"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="First place" />

            <ImageView
                android:id="@+id/ranking_nr_capturas_firstPlace_image"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_perfil"
                app:layout_constraintBottom_toTopOf="@+id/ranking_nr_capturas_firstPlace"
                app:layout_constraintStart_toStartOf="@+id/ranking_nr_capturas_firstPlace"
                app:layout_constraintEnd_toEndOf="@+id/ranking_nr_capturas_firstPlace"
                />

            <TextView
                android:id="@+id/ranking_nr_capturas_firstPlace_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nr_capturas"
                app:layout_constraintTop_toBottomOf="@+id/ranking_nr_capturas_firstPlace"
                app:layout_constraintStart_toStartOf="@+id/ranking_nr_capturas_firstPlace"
                />

            <TextView
                android:id="@+id/ranking_nr_capturas_firstPlace_text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ranking_nr_capturas_firstPlace"
                app:layout_constraintStart_toEndOf="@+id/ranking_nr_capturas_firstPlace_text"
                app:layout_constraintEnd_toEndOf="@+id/ranking_nr_capturas_firstPlace"
                />

            <ImageButton
                android:id="@+id/ranking_nr_capturas_secondPlace"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_second_place"
                android:backgroundTint="@color/ranking_grey"
                android:clickable="false"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="@+id/ranking_nr_capturas_firstPlace"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ranking_nr_capturas_firstPlace"
                android:contentDescription="Second place" />

            <ImageView
                android:id="@+id/ranking_nr_capturas_secondPlace_image"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_perfil"
                app:layout_constraintBottom_toTopOf="@+id/ranking_nr_capturas_secondPlace"
                app:layout_constraintStart_toStartOf="@+id/ranking_nr_capturas_secondPlace"
                app:layout_constraintEnd_toEndOf="@+id/ranking_nr_capturas_secondPlace"
                />

            <TextView
                android:id="@+id/ranking_nr_capturas_secondPlace_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nr_capturas"
                app:layout_constraintTop_toBottomOf="@+id/ranking_nr_capturas_secondPlace"
                app:layout_constraintStart_toStartOf="@+id/ranking_nr_capturas_secondPlace"
                />

            <TextView
                android:id="@+id/ranking_nr_capturas_secondPlace_text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ranking_nr_capturas_secondPlace"
                app:layout_constraintStart_toEndOf="@+id/ranking_nr_capturas_secondPlace_text"
                app:layout_constraintEnd_toEndOf="@+id/ranking_nr_capturas_secondPlace"
                />

            <ImageButton
                android:id="@+id/ranking_nr_capturas_thirdPlace"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_third_place"
                android:backgroundTint="@color/ranking_grey"
                android:clickable="false"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="@+id/ranking_nr_capturas_secondPlace"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ranking_nr_capturas_firstPlace"
                android:contentDescription="Third place" />

            <ImageView
                android:id="@+id/ranking_nr_capturas_thirdPlace_image"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_perfil"
                app:layout_constraintBottom_toTopOf="@+id/ranking_nr_capturas_thirdPlace"
                app:layout_constraintStart_toStartOf="@+id/ranking_nr_capturas_thirdPlace"
                app:layout_constraintEnd_toEndOf="@+id/ranking_nr_capturas_thirdPlace"
                />

            <TextView
                android:id="@+id/ranking_nr_capturas_thirdPlace_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nr_capturas"
                app:layout_constraintTop_toBottomOf="@+id/ranking_nr_capturas_thirdPlace"
                app:layout_constraintStart_toStartOf="@+id/ranking_nr_capturas_thirdPlace"
                />

            <TextView
                android:id="@+id/ranking_nr_capturas_thirdPlace_text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ranking_nr_capturas_thirdPlace"
                app:layout_constraintStart_toEndOf="@+id/ranking_nr_capturas_thirdPlace_text"
                app:layout_constraintEnd_toEndOf="@+id/ranking_nr_capturas_thirdPlace"
                />

            <TextView
                android:id="@+id/ranking_nr_capturas_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/minhas_capturas"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/ranking_nr_capturas_my_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_marginStart="10dp"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/ranking_nr_capturas_my"
                app:layout_constraintBottom_toBottomOf="@+id/ranking_nr_capturas_my"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>